{
	"compilerOptions": {
		"target": "ESNext",
		"outDir": "dist",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
		"moduleResolution": "Node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": false,
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react-jsx",
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@classes/*": ["src/entities/classes/*"],
			"@interfaces": ["src/entities/interfaces/index"],
			"@interfaces/*": ["src/entities/interfaces/*"],
			"@types": ["src/entities/types"],
			"@types-ui": ["src/entities/ui.types"],
			"@utils/*": ["src/utils/*"],
			"@config/*": ["src/config/*"],
			"@components/*": ["src/components/*"],
			"@styles/*": ["src/styles/*"],
			"@hooks/*": ["src/hooks/*"],
			"@context/*": ["src/context/*"],
			"@workers/*": ["src/workers/*"]
		}
	},
	"include": ["src"],
	"exclude": ["**/*.test.ts", "**/*.test.tsx"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
