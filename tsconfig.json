{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@classes": ["src/entities/classes/index"],
			"@classes/*": ["src/entities/classes/*"],
			"@interfaces": ["src/entities/interfaces/index"],
			"@interfaces/*": ["src/entities/interfaces/*"],
			"@types": ["src/entities/types"],
			"@utils": ["src/utils/index"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"include": ["src"]
}
